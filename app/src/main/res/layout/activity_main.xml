<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/manhinhbatdau"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAPPY CODE |"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tvHAPPYCODE"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/img_ceo"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAPPY MONEY |"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/tvHAPPYMONEY"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvHAPPYCODE"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/img_ceo"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAPPY LIFE"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/tvHAPPYLIFE"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvHAPPYMONEY"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/img_ceo"></TextView>

<ImageView
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:id="@+id/img_ceo"
    android:src="@drawable/ceo1"></ImageView>
</RelativeLayout>
