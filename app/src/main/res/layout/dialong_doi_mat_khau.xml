<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/nhaleonui"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"></TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Mật khẩu cũ"
        android:id="@+id/edtMKcuDMK"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/boder_edt"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Mật khẩu mới"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/edtMKmoiDMK"
        android:background="@drawable/boder_edt"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Lại mật khẩu mới"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/edtMKlaiMKmoiDMK"
        android:background="@drawable/boder_edt"></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Đổi mật khẩu"
        android:id="@+id/btnDoiMatKhau"></Button>

</LinearLayout>