<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/boder_edt"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edt_emaiLayLaiMatKhau"
        android:padding="10dp"
        android:hint="Email"
        android:drawableRight="@drawable/baseline_email_24"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boder_edt"></EditText>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Lấy lại mật khẩu"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#EA981D"
        android:id="@+id/btn_QMK"></Button>

</LinearLayout>