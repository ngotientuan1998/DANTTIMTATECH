<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".DsDonChayQuangCao">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgThoatDSQC"
        android:src="@drawable/thoat"></ImageView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:background="@drawable/boder_edt">

    <androidx.appcompat.widget.SearchView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/SearchViewDSQC"
        android:background="@drawable/boder_edt"
        ></androidx.appcompat.widget.SearchView>
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rycDSQC"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>