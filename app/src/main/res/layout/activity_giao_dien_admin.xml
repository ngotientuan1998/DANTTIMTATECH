<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giaoDienAdmin">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logoadmin"
        android:src="@drawable/sunnyteam"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào admin"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tvhelo"
        android:layout_below="@+id/logoadmin"></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách các cửa hàng"
        android:layout_below="@+id/tvhelo"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnDScuaHang"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách các khách hàng"
        android:layout_below="@+id/btnDScuaHang"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnDSkhachHang"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách chạy quảng cáo"
        android:layout_below="@+id/btnDSkhachHang"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnDScChayQuangCaoAdmin"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:id="@+id/btnDangXuatAdmin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnDScChayQuangCaoAdmin"></Button>

</RelativeLayout>